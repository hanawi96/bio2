{
  "meta": {
    "schemaVersion": 1,
    "id": "theme_a",
    "name": "Theme A (Free)",
    "tier": "free",
    "visibility": "public",
    "supports": {"modes": ["light", "dark", "compact"], "backgroundEffects": true},
    "contract": {
      "controls": [
        {"keyPath": "page.mode", "type": "select", "options": ["light", "dark", "compact"], "label": "Mode"},
        {"keyPath": "page.layout.textAlign", "type": "select", "options": ["left", "center", "right"], "label": "Text align"},
        {"keyPath": "page.layout.baseFontSize", "type": "select", "options": ["S", "M", "L", "XL"], "label": "Font size"},
        {"keyPath": "page.layout.pagePadding", "type": "slider", "min": 0, "max": 32, "step": 1, "label": "Page padding"},
        {"keyPath": "page.layout.blockGap", "type": "slider", "min": 0, "max": 32, "step": 1, "label": "Block spacing"}
      ]
    }
  },
  "tokens": {
    "color": {"gray": {"900": "#0B0F19", "50": "#F5F7FF"}},
    "typography": {"fontFamily": {"sans": "Inter"}, "fontSize": {"M": 16, "L": 18, "XL": 22}}
  },
  "page": {
    "mode": "light",
    "layout": {"textAlign": "center", "baseFontSize": "M", "pagePadding": 16, "blockGap": 12},
    "defaults": {"linkGroup": {"textAlign": "center", "fontSize": "M", "radius": 16}}
  },
  "background": {"kind": "color", "color": "#0B0F19", "effects": {"blur": 0, "dim": 0, "overlayColor": null}},
  "modes": {
    "dark": {"page": {"layout": {"textAlign": "center"}}},
    "compact": {"page": {"layout": {"pagePadding": 12, "blockGap": 8}}}
  }
}
